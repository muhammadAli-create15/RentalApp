<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount">


    <TextView
        android:id="@+id/textView"
        android:layout_width="195dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:text="QUICK SIGN UP"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtGoogle"
        android:layout_width="377dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangular"
        android:drawablePadding="20dp"
        android:gravity="center"
        android:text="Sign up with google"
        android:textSize="8pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/txtFacebook"
        android:layout_width="363dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rectangular"
        android:gravity="center"
        android:text="Sign up with facebook"
        android:textSize="8pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGoogle" />

    <View
        android:id="@+id/view1"
        android:layout_width="192dp"
        android:layout_height="3dp"
        android:layout_marginEnd="4dp"
        android:background="#C0C0C0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFacebook"
        app:layout_constraintVertical_bias="0.058" />

    <View
        android:id="@+id/view2"
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:layout_marginStart="4dp"
        android:background="#C0C0C0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFacebook"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="40dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:text="OR"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/view1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/txtFacebook" />

    <TextView
        android:id="@+id/editName"
        android:layout_width="161dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:text="Full name"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtName"
        android:layout_width="385dp"
        android:layout_height="64dp"
        android:hint="Enter your full name"
        android:padding="8dp"
        android:textSize="8pt"
        android:background="@drawable/rectangular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="367dp"
            android:layout_height="match_parent"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/editText"
        android:layout_width="187dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="196dp"
        android:text="Email address"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtName" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtEmail"
        android:layout_width="395dp"
        android:layout_height="71dp"
        android:background="@drawable/rectangular"
        android:hint="Enter your email address"
        android:padding="8dp"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.062">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="367dp"
            android:layout_height="match_parent"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/edittextView2"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvPassword1"
        android:layout_width="386dp"
        android:layout_height="63dp"
        android:hint="Enter your password"
        android:padding="8dp"
        android:textSize="8pt"
        android:background="@drawable/rectangular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextView2"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="365dp"
            android:layout_height="40dp"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/editTextPassword"
        android:layout_width="195dp"
        android:layout_height="37dp"
        android:layout_marginTop="68dp"
        android:text="Password"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextView2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtPassword2"
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:background="@drawable/rectangular"
        android:hint="Enter your password"
        android:padding="8dp"
        android:textSize="8pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="367dp"
            android:layout_height="match_parent"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/tvSign"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3D5AFE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="229dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:text="Already have an account?"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSign"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/editLogin"
        android:layout_width="56dp"
        android:layout_height="26dp"
        android:text="Log in"
        android:textColor="#FF3700B3"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/tvSign"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="51dp"
        android:layout_height="29dp"
        app:layout_constraintBottom_toTopOf="@+id/txtFacebook"
        app:layout_constraintStart_toStartOf="@+id/txtGoogle"
        app:layout_constraintTop_toTopOf="@+id/txtGoogle"
        app:srcCompat="@drawable/gogle" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="42dp"
        android:layout_height="63dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/txtFacebook"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="@+id/txtFacebook"
        app:layout_constraintTop_toBottomOf="@+id/txtGoogle"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/facebook" />


</androidx.constraintlayout.widget.ConstraintLayout>