<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign">
  <include
      android:id="@+id/include"
      layout="@layout/logbar" />


  <TextView
      android:id="@+id/textView12"
      android:layout_width="195dp"
      android:layout_height="31dp"
      android:layout_marginTop="60dp"
      android:text="QUICK LOG IN"
      android:textSize="10pt"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.018"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/txtGoogle"
      android:layout_width="382dp"
      android:layout_height="54dp"
      android:layout_marginTop="12dp"
      android:background="@drawable/rectangular"
      android:text="Sign up with google"
      android:gravity="center"
      android:textSize="8pt"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.448"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView12" />

  <TextView
      android:id="@+id/txtFacebook"
      android:layout_width="385dp"
      android:layout_height="50dp"
      android:layout_marginTop="28dp"
      android:background="@drawable/rectangular"
      android:text="Sign up with facebook"
      android:textSize="8pt"
      android:gravity="center"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.615"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtGoogle" />

  <View
      android:id="@+id/view1"
      android:layout_width="192dp"
      android:layout_height="3dp"
      android:layout_marginEnd="4dp"
      android:background="#C0C0C0"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtFacebook"
      app:layout_constraintVertical_bias="0.058" />

  <View
      android:id="@+id/view2"
      android:layout_width="150dp"
      android:layout_height="3dp"
      android:layout_marginStart="4dp"
      android:background="#C0C0C0"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtFacebook"
      app:layout_constraintVertical_bias="0.063" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="40dp"
      android:layout_height="57dp"
      android:layout_marginTop="24dp"
      android:text="OR"
      android:textSize="10pt"
      android:textStyle="bold"
      app:layout_constraintEnd_toStartOf="@+id/view1"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toEndOf="@+id/view2"
      app:layout_constraintTop_toBottomOf="@+id/txtFacebook" />


  <TextView
      android:id="@+id/editText2"
      android:layout_width="187dp"
      android:layout_height="27dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="192dp"
      android:text="Email address"
      android:textSize="10pt"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view2" />

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/tvEmail"
      android:layout_width="395dp"
      android:layout_height="71dp"
      android:background="@drawable/rectangular"
      android:hint="Enter your email address"
      android:padding="8dp"
      android:textSize="8pt"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.8"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editText2"
      app:layout_constraintVertical_bias="0.062">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="367dp"
        android:layout_height="match_parent"
        tools:ignore="TouchTargetSizeCheck" />
  </com.google.android.material.textfield.TextInputLayout>

  <TextView
      android:id="@+id/edittextView3"
      android:layout_width="180dp"
      android:layout_height="41dp"
      android:layout_marginTop="20dp"
      android:text="Password"
      android:textSize="10pt"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.108"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/edtPassword"
      android:layout_width="386dp"
      android:layout_height="63dp"
      android:hint="Enter your password"
      android:padding="8dp"
      android:textSize="8pt"
      android:background="@drawable/rectangular"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.487"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edittextView3"
      app:passwordToggleEnabled="true">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="365dp"
        android:layout_height="40dp"
        tools:ignore="TouchTargetSizeCheck" />
  </com.google.android.material.textfield.TextInputLayout>


  <Button
      android:id="@+id/edtLog"
      android:layout_width="249dp"
      android:layout_height="48dp"
      android:layout_marginTop="76dp"
      android:backgroundTint="#3D5AFE"
      android:text="LOG IN"
      android:textColor="#FFFFFF"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.302"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtPassword" />

  <TextView
      android:id="@+id/textView10"
      android:layout_width="229dp"
      android:layout_height="34dp"
      android:layout_marginStart="32dp"
      android:text="Don't have an account?"
      android:textSize="8pt"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtLog"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/btnSign"
      android:layout_width="109dp"
      android:layout_height="34dp"
      android:text="Sign Up"
      android:textColor="#FF3700B3"
      android:textSize="8pt"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/textView10"
      app:layout_constraintTop_toBottomOf="@+id/edtLog"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/tvForgot"
      android:layout_width="184dp"
      android:layout_height="30dp"
      android:layout_marginTop="28dp"
      android:text="Forgot password"
      android:textColor="#FF3700B3"
      android:textSize="8pt"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.169"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtPassword" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="51dp"
      android:layout_height="29dp"
      app:layout_constraintBottom_toBottomOf="@+id/txtGoogle"
      app:layout_constraintEnd_toEndOf="@+id/txtGoogle"
      app:layout_constraintHorizontal_bias="0.057"
      app:layout_constraintStart_toStartOf="@+id/txtGoogle"
      app:layout_constraintTop_toBottomOf="@+id/textView12"
      app:layout_constraintVertical_bias="0.729"
      app:srcCompat="@drawable/gogle" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="42dp"
      android:layout_height="63dp"
      app:layout_constraintBottom_toBottomOf="@+id/txtFacebook"
      app:layout_constraintEnd_toEndOf="@+id/txtFacebook"
      app:layout_constraintHorizontal_bias="0.046"
      app:layout_constraintStart_toStartOf="@+id/txtFacebook"
      app:layout_constraintTop_toBottomOf="@+id/txtGoogle"
      app:layout_constraintVertical_bias="1.0"
      app:srcCompat="@drawable/facebook" />

</androidx.constraintlayout.widget.ConstraintLayout>